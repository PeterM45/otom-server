<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <!-- Disable custom errors to show detailed messages -->
    <customErrors mode="Off" />
  </system.web>

  <system.webServer>
    <!-- Enable detailed error messages -->
    <httpErrors errorMode="Detailed" />

    <directoryBrowse enabled="true" />
    <!-- Other system.webServer configurations -->
  </system.webServer>
</configuration>